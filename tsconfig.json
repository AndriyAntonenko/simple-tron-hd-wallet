{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "declaration": true
  },
  "exclude": [
    "./tests/",
    "./node_modules/",
    "./lib/"
  ],
  "include": [
    "src/**/*"
  ]
}
